<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        style="@style/defaultMarginTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RCSS\nRetail Chain Support System"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site ID" />

            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Number" />

            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name" />

            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Number" />

            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name" />

            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity Available" />

            <TextView
                style="@style/defaultMarginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/actvSiteID"
                    style="@style/defaultMarginInputView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Input kode Site ID!"></AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/editCustNumber"
                style="@style/defaultMarginInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Customer Number"></EditText>

            <TextView
                android:id="@+id/tvCustName"
                style="@style/defaultMarginInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name"></TextView>

            <EditText
                android:id="@+id/editItemNumber"
                style="@style/defaultMarginInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Item Number"></EditText>

            <TextView
                android:id="@+id/tvItemName"
                style="@style/defaultMarginInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Name"></TextView>

            <TextView
                android:id="@+id/tvQty"
                style="@style/defaultMarginInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity Available"></TextView>

            <TextView
                android:id="@+id/tvPrice"
                style="@style/defaultMarginInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pricelist"></TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="process"
            android:text="SELECT" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="NOTIFIKASI"
        android:textSize="20dp" />

</LinearLayout>